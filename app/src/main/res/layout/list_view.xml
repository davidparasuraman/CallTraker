<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ListPanel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dip"
            android:layout_gravity="center_vertical">

        <LinearLayout android:id="@+id/namePanel" android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:textSize="20dp"/>
            <TextView
                    android:id="@+id/mobileNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:typeface="sans"
                    android:textColor="#888888"
                    android:textSize="18dp"
            />
        </LinearLayout>

        <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/namePanel"
                android:textColor="#888888"
                android:textSize="15sp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
            <ImageView android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:id="@+id/smsMsg"
                       android:src="@drawable/sms"
                       android:layout_alignParentRight="true"
                       android:layout_marginTop="25dp"/>
            <ImageView android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:id="@+id/whatsAppMsg"
                       android:src="@drawable/whatsapp"
                       android:layout_alignParentRight="true"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="25dp"/>
            <ImageView android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:id="@+id/call"
                       android:src="@drawable/call"
                       android:layout_alignParentRight="true"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="25dp"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="#F883AD"
          android:layout_marginTop="5dp"></View>
</LinearLayout>